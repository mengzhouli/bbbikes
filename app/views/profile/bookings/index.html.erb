<div class="wrapper">
	<div class="container text-center">
		<h1>Your Bookings</h1>
  		<% current_user.bookings.each do |booking| %>
  			<ul class="list-unstyled">
          <li>You are booking a <%= booking.bike.brand %> bike</li>
  				<li>From: <%= booking.bike.user.email %> </li>
  				<li>The booking is <%= booking.status %></li>
  				
  			</ul>
  		<% end %>
	</div>
  <div class="container text-center">
    <h1>Booking Requests for Your Bikes</h1>
      <% current_user.bikes.each do |bike| %>
        <% if bike.bookings.any? %>
          <h4>Your <%= bike.brand %> bike has the following bookings</h4>
          <% bike.bookings.each do |booking|%>
            <ul class="list-unstyled">
              <li><%= booking.status %></li>
              <li><%= booking.user.email %> is trying to book</li>
              <li>From: <%= booking.start_time %></li>
              <li>To: <%= booking.end_time %></li>
            </ul>
            <div class="change-booking text-center">
              <% if booking.status == "pending" %>
                <%= simple_form_for [bike, booking] do |f| %>
                  <%= f.error_notification %>
                  <%= f.button :submit, label: "Confirm", class: "btn btn-success" %>
                <% end %>
              <% end %>
              <%= button_to "Cancel this booking", [bike, booking], confirm: "are you sure", method: :delete, class: "btn btn-danger" %>
          </div>
          <% end%>
        <% end %>
      <% end %>
  </div>
</div>